{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "rootDir": ".."
    },
    "files": ["./src/types/global.d.ts"],
    "include": ["src/**/*", "index.ts", "../shared/**/*"],
    "exclude": ["node_modules", "dist"]
}
